<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_300"
    >
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Spinner
                android:id="@+id/week_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:paddingRight="10dp"
                android:theme="@style/SpinnerStyle"
                >
            </Spinner>
        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>
    <com.istudy.coursetable.ui.view.CoursesView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_view"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
<!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/course_view"
        >

        <Button
            android:id="@+id/add_course_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加课程"></Button>

        <Button
            android:id="@+id/get_course_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="获取课表" />
    </LinearLayout>
-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@color/white"
        android:layout_marginRight="16dp"
        android:layout_above="@id/expandable_bottom_bar"
        android:layout_alignParentRight="true"
        android:text="添加课表"
        android:textColor="@color/white"
        app:iconTint="@color/white"

        />
    <github.com.st235.lib_expandablebottombar.ExpandableBottomBar
        android:id="@+id/expandable_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        app:exb_backgroundCornerRadius="0dp"
        app:exb_backgroundColor="@color/white"
        app:exb_itemInactiveColor="@color/black"
        android:layout_below="@id/course_view"
        app:exb_items="@menu/bottom_bar"
        />
</RelativeLayout>